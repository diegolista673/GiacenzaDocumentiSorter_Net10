@page
@model GiacenzaSorterRm.Pages.PagesAssociazione.EditModel

@{
    ViewData["Title"] = "Edit Associazione";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-6">

            <h4>Modifica Associazione</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Ctc.IdRiepilogo" />
                        <input type="hidden" asp-for="Ctc.IdCommessa" />
                        <input type="hidden" asp-for="Ctc.DescCommessa" />
                        <input type="hidden" asp-for="Ctc.IdTipologia" />
                        <input type="hidden" asp-for="Ctc.DescTipologia" />
                        <input type="hidden" asp-for="Ctc.IdContenitore" />
                        <input type="hidden" asp-for="Ctc.DescContenitore" />
                        
                        <dl class="row mb-3">
                            <dt class="col-sm-4">
                                Commessa
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Ctc.DescCommessa)
                            </dd>
                            <dt class="col-sm-4">
                                Tipologia
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Ctc.DescTipologia)
                            </dd>
                            <dt class="col-sm-4">
                                Contenitore
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Ctc.DescContenitore)
                            </dd>
                        </dl>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Ctc.Quantita" for="Ctc_Quantita" class="control-label form-label">Quantità</label>
                            <input asp-for="Ctc.Quantita" id="Ctc_Quantita" type="number" class="form-control" aria-required="true" />
                            <span asp-validation-for="Ctc.Quantita" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" asp-for="Ctc.Attiva" id="Ctc_Attiva" type="checkbox" />
                            <label class="form-check-label" for="Ctc_Attiva" asp-for="Ctc.Attiva">Attiva</label>
                        </div>
                        
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-primary" /> |
                            <a asp-page="./Index" class="text-decoration-none">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
