@page
@model GiacenzaSorterRm.Pages.PagesImpostazioni.PagesOperatori.IndexModel

@{
    ViewData["Title"] = "Operatori";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">

            <h1>Operatori</h1>
            <br />
            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table table-striped table-bordered nowrap display compact table-sm" style="width:100%" tabindex="-1" id="tableProduzione" >
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Operatori[0].IdOperatore)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Operatori[0].Operatore)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Operatori[0].Ruolo)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Operatori[0].Azienda)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Operatori[0].IdCentroLavNavigation.CentroLavDesc)
                        </th>

                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Operatori)
                    {
 
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdOperatore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Operatore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ruolo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Azienda)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdCentroLavNavigation.CentroLavDesc)
                            </td>
                            <td>
                                @if ((item.Ruolo == "ADMIN") && (User.IsInRole("ADMIN")))
                                {
                                    <a asp-page="./Edit" asp-route-id="@item.IdOperatore">Edit</a> <span> | </span>
                                    <a asp-page="./Delete" asp-route-id = "@item.IdOperatore">Delete</a>
                                }

                                @if ((item.Ruolo != "ADMIN") )
                                {
                                    <a asp-page="./Edit" asp-route-id="@item.IdOperatore">Edit</a> <span> | </span>
                                    <a asp-page="./Delete" asp-route-id="@item.IdOperatore">Delete</a>
                                }

                            </td>
                        </tr>
                        

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $('#tableProduzione').DataTable();
        });

    </script>
}
