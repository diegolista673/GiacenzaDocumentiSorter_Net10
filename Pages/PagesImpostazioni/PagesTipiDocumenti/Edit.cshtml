@page
@model GiacenzaSorterRm.Pages.PagesImpostazioni.PagesTipiDocumenti.EditModel

@{
    ViewData["Title"] = "Edit Tipologia";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-8 col-md-8 col-lg-8">

            <h1>Modifica Tipologie Documenti</h1>
            <br />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Tipologie.IdTipologia" id="Tipologie_IdTipologia" />
                
                <div class="mb-3">
                    <label for="Tipologie_Tipologia" class="form-label">Tipologia</label>
                    <input asp-for="Tipologie.Tipologia" id="Tipologie_Tipologia" class="form-control" />
                    <span asp-validation-for="Tipologie.Tipologia" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="Tipologie_Note" class="form-label">Note</label>
                    <input asp-for="Tipologie.Note" id="Tipologie_Note" class="form-control" />
                    <span asp-validation-for="Tipologie.Note" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
