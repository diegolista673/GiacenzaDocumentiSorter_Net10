@page
@model GiacenzaSorterRm.Pages.PagesOperatori.CreateModel

@{
    ViewData["Title"] = "Create Operatore";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-12 col-lg-6">

            <h4>Nuovo Operatore</h4>
                <hr />
                <div class="row" id="app">
                    <div class="col-md-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Operatori.Operatore" class="form-label">Se operatore interno inserire come utenza di dominio ( Es: nome.cognome )</label>
                                <input asp-for="Operatori.Operatore" class="form-control" oninput="this.value = this.value.toLowerCase()" />
                                <span asp-validation-for="Operatori.Operatore" class="text-danger"></span>
                            </div>

                            @if (User.IsInRole("ADMIN"))
                            {
                                <div class="mb-3">
                                    <label asp-for="Operatori.Ruolo" class="form-label"></label>
                                    <select asp-for="Operatori.Ruolo" class="form-select">
                                        <option value="">- Ruolo -</option>
                                        <option value="ADMIN">ADMIN</option>
                                        <option value="SUPERVISOR">SUPERVISOR</option>
                                        <option value="USER">USER</option>

                                    </select>
                                    <span asp-validation-for="Operatori.Ruolo" class="text-danger"></span>
                                </div>
                            }


                            @if (User.IsInRole("SUPERVISOR"))
                            {
                                <div class="mb-3">
                                    <label asp-for="Operatori.Ruolo" class="form-label"></label>
                                    <select asp-for="Operatori.Ruolo" class="form-select">
                                        <option value="">- Ruolo -</option>
                                        <option value="SUPERVISOR">SUPERVISOR</option>
                                        <option value="USER">USER</option>
                                    </select>
                                    <span asp-validation-for="Operatori.Ruolo" class="text-danger"></span>
                                </div>
                            }


                            <div class="mb-3">
                                <label asp-for="Operatori.Azienda" class="form-label"></label>
                                <select asp-for="Operatori.Azienda" class="form-select" v-model="selectAzienda" v-on:change="onChangeAzienda($event)">
                                    <option value="">- Azienda -</option>
                                    <option value="POSTEL">POSTEL</option>
                                    <option value="ESTERNO">ESTERNO</option>
                                </select>
                                <span asp-validation-for="Operatori.Azienda" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label asp-for="Operatori.IdCentroLav" class="form-label">Centro Lavorazione</label>
                                <select asp-for="Operatori.IdCentroLav" class="form-select" asp-items="@Model.CentriSL">
                                    <option value="">- Centro -</option>
                                </select>
                                <span asp-validation-for="Operatori.IdCentroLav" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label asp-for="Operatori.Password" class="form-label">Password - min 8 char -</label>
                                <input asp-for="Operatori.Password" class="form-control" v-bind:disabled="isDisabledPassword" v-model="Password" />
                                <span asp-validation-for="Operatori.Password" class="text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <input type="submit" value="Create" class="btn btn-primary"  />
                            </div>

                        </form>
                    </div>
                </div>

                <div>
                    <a asp-page="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>


        var vm = new Vue({

            el: '#app',
            data: {
                Password: '',
                isDisabledPassword: true,
                selectAzienda: "",
            },
            methods: {

                onChangeAzienda: function (event) {

                    var self = this;
                    if ((self.selectAzienda == "POSTEL") || (self.selectAzienda == "")) {
                        self.isDisabledPassword = true
                        self.Password = ''
                    }
                    else {
                        self.isDisabledPassword = false
                        self.Password = ''
                    }


                }
            }

        });
    </script>
}



