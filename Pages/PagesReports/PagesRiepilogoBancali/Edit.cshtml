@page
@model GiacenzaSorterRm.Pages.PagesReports.PagesRiepilogoBancali.EditModel

@{
    ViewData["Title"] = "Edit Bancale";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-8 col-md-8 col-lg-8">

            <h1>Modifica Bancale</h1>
            <br />
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Bancali.IdBancale" id="Bancali_IdBancale" />
                <input type="hidden" asp-for="Bancali.IdCentroArrivo" id="Bancali_IdCentroArrivo" />
                <input type="hidden" asp-for="Bancali.IdOperatoreAccettazione" id="Bancali_IdOperatoreAccettazione" />

                <div class="mb-3">
                    <label for="Bancali_Bancale" class="form-label">Bancale</label>
                    <input asp-for="Bancali.Bancale" id="Bancali_Bancale" class="form-control" />
                    <span asp-validation-for="Bancali.Bancale" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="Bancali_OperatoreAccettazione" class="form-label">Operatore Accettazione</label>
                    <input asp-for="Bancali.OperatoreAccettazione" id="Bancali_OperatoreAccettazione" class="form-control" />
                    <span asp-validation-for="Bancali.OperatoreAccettazione" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Bancali_DataAccettazioneBancale" class="form-label">Data Accettazione Bancale</label>
                    <input asp-for="Bancali.DataAccettazioneBancale" id="Bancali_DataAccettazioneBancale" class="form-control" />
                    <span asp-validation-for="Bancali.DataAccettazioneBancale" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Bancali_Note" class="form-label">Note</label>
                    <input asp-for="Bancali.Note" id="Bancali_Note" class="form-control" />
                    <span asp-validation-for="Bancali.Note" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Bancali_IdCommessa" class="form-label">Commessa</label>
                    <select asp-for="Bancali.IdCommessa" id="Bancali_IdCommessa" class="form-control" asp-items="@Model.CommesseSL">
                        <option value="">- Commessa -</option>
                    </select>
                    <span asp-validation-for="Bancali.IdCommessa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
