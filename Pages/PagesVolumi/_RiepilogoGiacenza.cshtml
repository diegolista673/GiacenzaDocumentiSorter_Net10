@model GiacenzaSorterRm.Pages.PagesVolumi.IndexModel

@{
    Layout = null;
}

<style>
    .box {
        
        overflow-wrap: break-word;
    }
</style>


<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="col-xs-6 col-xs-offset-6 center">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-danger" role="alert">
                        Nessun risultato trovato
                    </div>
                }

                <div class="col-xs-6 col-xs-offset-6 center">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                </div>

            </div>

            @if (Model.LstGiacenzaView != null)
            {
                @if (Model.LstGiacenzaView.Count > 0)
                {

                    <div class="text-center">
                        <div class="row">
                            <div class="col-3 col-xs-3">
                            </div>
                            <div class="col-6 col-xs-6 alert alert-danger" role="alert">
                                <h4>Totale documenti in giacenza = @Model.TotaleGiacenza.ToString("N0")</h4>
                            </div>
                            <div class="col-3 col-xs-3">
                            </div>
                        </div>

                        <br />
                    </div>


                    <table class="table table-striped table-bordered nowrap display compact " style="width:100%" id="tableProduzione" tabindex="-1">

                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.LstGiacenzaView[0].Centro)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.LstGiacenzaView[0].Piattaforma)
                                </th>
                                <th scope="col" style="text-align: center">
                                    @Html.DisplayNameFor(model => model.LstGiacenzaView[0].Giacenza)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstGiacenzaView)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Centro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Piattaforma)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Giacenza)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                }
            }
            
        </div>
    </div>
</div>








