@model GiacenzaSorterRm.Pages.PagesVolumi.IndexModel

@{
    Layout = null;
}

<style>
    .box {
        
        overflow-wrap: break-word;
    }
</style>

<div class="col-xs-6 col-xs-offset-6 center">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

</div>


<div class="col-xs-6 col-xs-offset-6 center">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger" role="alert">
            Nessun risultato trovato
        </div>
    }

</div>
@if (Model.LstCommesseView != null)
{
  @if (Model.LstCommesseView.Count > 0)
{

    <div class="text-center">
        <div class="row">
            <div class="col-3 col-xs-3">

            </div>
            <div class="col-6 col-xs-6 alert alert-danger" role="alert">
                <h4>Totale documenti in giacenza = @Model.TotaleGiacenza.ToString("N0")</h4>
            </div>
            <div class="col-3 col-xs-3">

            </div>
        </div>

        <br />
    </div>


    <table class="table table-striped table-bordered nowrap display compact " style="width:100%" id="tableProduzione" tabindex="-1">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LstCommesseView[0].Commessa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LstCommesseView[0].Tipologia)
                </th>
                <th>
                    Normalizzati il <br> @Model.EndDate.ToShortDateString()
                </th>
                <th>
                   Sorterizzati il <br>@Model.EndDate.ToShortDateString()
                </th>
                <th>
                   Totale Giacenza al <br> @Model.EndDate.ToShortDateString()
                 </th>
                <th>
                    Scatola più vecchia <br> ancora da sorterizzare 
                </th>
                <th>
                    Data Scatola <br> più vecchia
                </th>
                <th>
                    Centro <br> Giacenza
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LstCommesseView)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commessa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipologia)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TotaleDocumentiNormalizzati)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TotaleDocumentiSorterizzati)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TotaleDocumentiGiacenza)
                    </td class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.ScatolaNormalizzataOld)
                    </td>
                    <td>
                        @if (item.DataScatolaOld != DateTime.MinValue)
                        {
                            @Html.DisplayFor(modelItem => item.DataScatolaOld)
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CentroGiacenza)
                    </td>
                </tr>
            }
        </tbody>
    </table>


}  
}







