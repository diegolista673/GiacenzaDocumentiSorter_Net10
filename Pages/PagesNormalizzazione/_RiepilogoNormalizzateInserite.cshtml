@model GiacenzaSorterRm.Models.ScatoleModel

@{
    Layout = null;
}

    <style>
        #LastScatola[type='text'] {
            width: 100%;
            font-size: 48px;
            color: #0f08b2;
        }

    </style>


    <div id="scatolaInserita">
        <input asp-for="LastScatola" readonly tabindex="-1" placeholder="<-- scatola normalizzata -->" />
        <br />
        @if (Model.IsNormalizzata)
        {

            <div class="alert alert-danger mt-2" role="alert">
                <h2><b>@Model.AlertNormalizzata</b></h2>
            </div>
        }
        @if (Model.IsNotConforme)
        {
            <div class="alert alert-danger mt-2" role="alert" >
                <h2><b>@Model.AlertNonConforme</b></h2>
            </div>
        }

        @if (Model.ScatolaNonPresenteMondo)
        {
        <div class="alert alert-danger mt-2" role="alert">
                <h2><b> Attenzione! Scatola non presente su Mondo - controllare etichetta</b></h2>
            </div>
        }

    </div>

<div class=" mt-3 " tabindex="-1">

    <table class="table table-striped table-bordered nowrap display compact " style="width:100%" id="tableProduzione" tabindex="-1">
            <thead>
                <tr>
                    <th scope="col">
                        @*@Html.DisplayNameFor(model => model.ScatoleLst[0].DataNormalizzazione)*@
                        Data
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].Scatola)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].IdCommessaNavigation.Commessa)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].IdContenitoreNavigation.Contenitore)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].IdTipologiaNavigation.Tipologia)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].IdTipoNormalizzazioneNavigation.TipoNormalizzazione)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ScatoleLst[0].Note)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ScatoleLst != null)
                {
                    @foreach (var item in Model.ScatoleLst)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataNormalizzazione)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Scatola)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdCommessaNavigation.Commessa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdContenitoreNavigation.Contenitore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipologiaNavigation.Tipologia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoNormalizzazioneNavigation.TipoNormalizzazione)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>

                        </tr>
                    }
                }

            </tbody>
        </table>

    </div>




