@model GiacenzaSorterRm.Models.ScatoleModel

@{
    Layout = null;
}

<style>
    #LastScatola[type='text'] {
        width: 100%;
        font-size: 48px;
        color: #0f08b2;
    }

</style>


<div id="scatolaInserita">
    <input asp-for="LastScatola" readonly tabindex="-1" placeholder="<-- scatola aggiornata -->" />
    <br />



    @if (Model.ScatolaNonPresenteInDB == true)
    {
        <div class="alert alert-danger mt-2" role="alert">
            <h2><b> Attenzione! Scatola non presente in DB - controllare etichetta</b></h2>
        </div>
    }

    @if (Model.ScatolaSorterizzata == true)
    {
        <div class="alert alert-danger mt-2" role="alert">
            <h2><b> Attenzione! Scatola sorterizzata in precedenza, impossibile cambiare giacenza </b></h2>
        </div>
    }


</div>

<div class=" mt-3 " tabindex="-1">

    <table class="table table-striped table-bordered nowrap display compact " style="width:100%" id="tableProduzione" tabindex="-1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ScatoleLst[0].DataCambioGiacenza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScatoleLst[0].Scatola)
                </th>
                <th>
                    Centro Normalizzazione
                </th>
                <th>
                    Centro Cambio Giacenza
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScatoleLst[0].IdCommessaNavigation.Commessa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScatoleLst[0].IdContenitoreNavigation.Contenitore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScatoleLst[0].IdTipologiaNavigation.Tipologia)
                </th>
                <th>
                    Note
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ScatoleLst != null)
            {
                @foreach (var item in Model.ScatoleLst)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCambioGiacenza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Scatola)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCentroNormalizzazioneNavigation.CentroLavDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCentroGiacenzaNavigation.CentroLavDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCommessaNavigation.Commessa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdContenitoreNavigation.Contenitore)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTipologiaNavigation.Tipologia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>

</div>




