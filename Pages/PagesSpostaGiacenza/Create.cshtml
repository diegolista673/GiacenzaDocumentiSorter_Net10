@page "{handler?}"
@model GiacenzaSorterRm.Pages.PagesSpostaGiacenza.CreateModel
@{
    ViewData["Title"] = "Sposta Giacenza";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="card text-white bg-info mb-1 max-w-100" >
        <div class="card-body">
            <h2 class="text-center">Sposta Giacenza</h2>
        </div>
    </div>
        <div class="row mt-3">

        <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3 ">

            <div class="card" id="app">

                <div class="card-header">
                    <h5 class="card-title">Aggiornamento Scatola</h5>
                </div>
                <div class="card-body">

                    <form method="post" id="formAggiornaScatola">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="control-label">Data Cambio Giacenza</label>
                            <input asp-for="Scatole.DataCambioGiacenza" class="form-control" />
                            <span asp-validation-for="Scatole.DataCambioGiacenza" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <select asp-for="Scatole.IdCentroGiacenza" class="form-control" asp-items="@Model.CentriSL">
                                <option value="">- Centro di Destinazione -</option>
                            </select>
                            <span asp-validation-for="Scatole.IdCentroGiacenza" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <textarea asp-for="Scatole.NoteCambioGiacenza" class="form-control" cols="40" rows="3" placeholder="Note"></textarea>
                            <span asp-validation-for="Scatole.NoteCambioGiacenza" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Scatole.Scatola" class="form-control" />
                        </div>
                         

                        <div class="mb-3 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Aggiorna</button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <div class="col-sm-9 col-md-9 col-lg-9 col-xl-9 align-self-stretch">
            <div id="resultDiv">
                <partial name="_RiepilogoScatoleGiacenza" model="Model.ScatoleModel" />
            </div>
        </div>

    </div>
</div>


@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="module">

        import { FetchHelpers } from '/js/fetch-helpers.js';

        // Inizializza DataTable
        $(document).ready(() => {
            $('#tableProduzione').DataTable({ scrollX: true });
        });

        // Handler submit
        document.getElementById('formAggiornaScatola').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target);

            try {
                await FetchHelpers.postFormWithUpdate(
                    '?handler=AggiornaScatola',
                    formData,
                    'resultDiv',
                    () => {
                        // Success callback
                        FetchHelpers.reinitDataTable('tableProduzione');
                        FetchHelpers.clearInputs(['Scatole_Scatola','Scatole_NoteCambioGiacenza']);
                    }
                );
            } catch (error) {
                console.error('Errore:', error);
            }
        });
    </script>
}



