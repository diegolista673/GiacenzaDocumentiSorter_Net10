@page
@model GiacenzaSorterRm.Pages.TipologiaNormalizzazione.EditModel

@{
    ViewData["Title"] = "Edit Tipo Prodotto";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-8 col-md-8 col-lg-8">

            <h1>Modifica Tipo Prodotto</h1>
            <br />
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipiNormalizzazione.IdTipoNormalizzazione" id="TipiNormalizzazione_IdTipoNormalizzazione" />
                
                <div class="mb-3">
                    <label for="TipiNormalizzazione_TipoNormalizzazione" class="form-label">Tipo Normalizzazione</label>
                    <input asp-for="TipiNormalizzazione.TipoNormalizzazione" id="TipiNormalizzazione_TipoNormalizzazione" class="form-control" />
                    <span asp-validation-for="TipiNormalizzazione.TipoNormalizzazione" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

