@page
@model GiacenzaSorterRm.Pages.TipologiaNormalizzazione.CreateModel

@{
    ViewData["Title"] = "Create Tipo Prodotto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-6">

            <h4>Nuovo Tipo Prodotto</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TipiNormalizzazione.TipoNormalizzazione" class="control-label"></label>
                            <input asp-for="TipiNormalizzazione.TipoNormalizzazione" class="form-control" oninput="this.value = this.value.toUpperCase()"/>
                            <span asp-validation-for="TipiNormalizzazione.TipoNormalizzazione" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



