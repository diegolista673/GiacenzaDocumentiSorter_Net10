@page
@model GiacenzaSorterRm.Pages.PagesAssociazione.IndexModel

@{
    ViewData["Title"] = "Associazione";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">

            <h1>Associazione</h1>
            <br />
            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table table-striped table-bordered nowrap display compact table-sm" style="width:100%" tabindex="-1" id="tableProduzione">
                <thead>
                    <tr>
                        <th>
                            Commessa
                        </th>
                        <th>
                            Tipologia
                        </th>
                        <th>
                            Contenitore
                        </th>
                        <th style="width: 10%;text-align: center ">
                            Quantità
                        </th>
                        <th style="width: 10%;text-align: center ">
                            Attiva
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CommessaTipologiaContenitore)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescCommessa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescTipologia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescContenitore)
                            </td>
                            <td style="width: 10%;text-align: center ">
                                @Html.DisplayFor(modelItem => item.Quantita)
                            </td>
                            <td style="width: 10%;text-align: center ">
                                @if (item.Attiva == true)
                                {
                                    <div>SI</div>
                                }
                                else
                                {
                                    <div>NO</div>
                                }
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.IdRiepilogo">Edit</a>  <span> | </span>
                                <a asp-page="./Delete" asp-route-id="@item.IdRiepilogo">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $('#tableProduzione').DataTable();
        });

    </script>
}
