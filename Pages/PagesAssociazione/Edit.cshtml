@page
@model GiacenzaSorterRm.Pages.PagesAssociazione.EditModel

@{
    ViewData["Title"] = "Edit Associazione";
}

    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-8 col-md-8 col-lg-8">

                <h1>Modifica Associazione </h1>
                <br />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Ctc.IdRiepilogo" />
                    <input type="hidden" asp-for="Ctc.IdCommessa" />
                    <input type="hidden" asp-for="Ctc.DescCommessa" />
                    <input type="hidden" asp-for="Ctc.IdTipologia" />
                    <input type="hidden" asp-for="Ctc.DescTipologia" />
                    <input type="hidden" asp-for="Ctc.IdContenitore" />
                    <input type="hidden" asp-for="Ctc.DescContenitore" />
                    <input type="hidden" asp-for="Ctc.Quantita" />

                    <div class="mb-3">
                        <label asp-for="Ctc.Attiva" class="control-label"></label>
                        <select asp-for="Ctc.Attiva" class="form-control">
                            <option value="">- Commessa Attiva -</option>
                            <option value="true">SI</option>
                            <option value="false">No</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
