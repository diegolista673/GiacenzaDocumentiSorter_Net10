<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewData["Title"]</title>

    <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/utilities/custom-utilities.css" asp-append-version="true" rel="stylesheet" />

    <!-- font-awesome -->
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <link href="~/logistic.png" rel="shortcut icon" type="image/x-icon" />
    <link href="~/logistic.png" rel="icon" type="image/x-icon" />

    <!-- datatables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.5/css/buttons.bootstrap5.min.css"  />

    @RenderSection("styles", required: false)

</head>

<body>

    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-to-content">Salta al contenuto principale</a>

    <header>
        @if (@User.Identity.Name != null)
        {
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-sm-0">

                            @if ((User.IsInRole("ADMIN") || User.IsInRole("SUPERVISOR")))
                            {

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogistica" role="button" data-bs-toggle="dropdown" aria-expanded="false">Logistica</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownLogistica">
                                        <li><a class="dropdown-item" asp-page="/PagesAccettazione/Create">Accettazione Bancali</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesNormalizzazione/Create">Normalizzazione Scatole</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSorter" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sorter</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownSorter">
                                        <li><a class="dropdown-item" asp-page="/PagesSorter/Create">Scansione Sorter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAggiornamento" role="button" data-bs-toggle="dropdown" aria-expanded="false">Aggiornamento</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownAggiornamento">
                                        <li><a class="dropdown-item" asp-page="/PagesMacero/Index">Macero</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesSpostaGiacenza/Create">Sposta Giacenza</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReports" role="button" data-bs-toggle="dropdown" aria-expanded="false">Reports</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownReports">
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogoBancali/Index">Report Bancali</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesVolumi/Index">Report Giacenza</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogo/Index">Report Scatole</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesNormalizzato/Index">Report Commesse Normalizzate</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesSorterizzato/Index">Report Commesse Sorter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownImpostazioni" role="button" data-bs-toggle="dropdown" aria-expanded="false">Impostazioni</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownImpostazioni">
                                        <li><a class="dropdown-item" asp-page="/PagesAssociazione/Index">Associazione</a></li>
                                        <li><a class="dropdown-item" asp-page="/TipiLavorazioni/Index">Commesse</a></li>
                                        <li><a class="dropdown-item" asp-page="/TipiContenitori/Index">Contenitori</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesOperatori/Index">Operatori</a></li>
                                        <li><a class="dropdown-item" asp-page="/TipoPiattaforme/Index">Piattaforme</a></li>
                                        <li><a class="dropdown-item" asp-page="/TipologiaNormalizzazione/Index">Tipologia Normalizzazione</a></li>
                                        <li><a class="dropdown-item" asp-page="/TipiDocumenti/Index">Tipologie</a></li>
                                    </ul>
                                </li>

                            }
                            else if (User.FindFirst("Azienda").Value == "POSTEL")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdownLogisticaPostel" role="button" aria-expanded="false">Logistica</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSorterPostel" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sorter</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownSorterPostel">
                                        <li><a class="dropdown-item" asp-page="/PagesSorter/Create">Scansione Sorter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAggiornamentoPostel" role="button" data-bs-toggle="dropdown" aria-expanded="false">Aggiornamento</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownAggiornamentoPostel">
                                        <li><a class="dropdown-item" asp-page="/PagesMacero/Index">Macero</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesSpostaGiacenza/Create">Sposta Giacenza</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReportsPostel" role="button" data-bs-toggle="dropdown" aria-expanded="false">Reports</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownReportsPostel">
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogoBancali/Index">Report Bancali</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesVolumi/Index">Report Giacenza</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogo/Index">Report Scatole</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesNormalizzato/Index">Report Commesse Normalizzate</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesSorterizzato/Index">Report Commesse Sorter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdownImpostazioniPostel" role="button" aria-expanded="false">Impostazioni</a>
                                </li>

                            }
                            else if (User.FindFirst("Azienda").Value == "ESTERNO")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogisticaEsterno" role="button" data-bs-toggle="dropdown" aria-expanded="false">Logistica</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownLogisticaEsterno">
                                        <li><a class="dropdown-item" asp-page="/PagesAccettazione/Create">Accettazione Bancali</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesNormalizzazione/Create">Normalizzazione Scatole</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdownSorterEsterno" role="button" aria-expanded="false">Sorter</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdownAggiornamentoEsterno" role="button" aria-expanded="false">Aggiornamento</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReportsEsterno" role="button" data-bs-toggle="dropdown" aria-expanded="false">Reports</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownReportsEsterno">
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogoBancali/Index">Report Bancali</a></li>
                                        <li><a class="dropdown-item disabled">Report Giacenza</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesRiepilogo/Index">Report Scatole</a></li>
                                        <li><a class="dropdown-item" asp-page="/PagesNormalizzato/Index">Report Commesse Normalizzate</a></li>
                                        <li><a class="dropdown-item disabled">Report Commesse Sorter</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle disabled" href="#" id="navbarDropdownImpostazioniEsterno" role="button" aria-expanded="false">Impostazioni</a>
                                </li>
                            }

                        </ul>

                        <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                            <li class="nav-item">
                                <span class="nav-link"><i class="far fa-user" aria-hidden="true"></i> @User.Identity.Name&nbsp;( @User.FindFirst("Ruolo").Value.ToLower() - @User.FindFirst("Azienda").Value.ToLower() - @User.FindFirst("Centro").Value.ToLower() ) </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Logout/Index"><i class="fas fa-sign-out-alt" aria-hidden="true"></i> Logout</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>

        }


    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3" id="main-content" tabindex="-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
                       
        </div>
    </footer>

    <!-- jQuery DEVE essere caricato per primo -->
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
            crossorigin="anonymous"></script>

    <!-- Bootstrap 5 - Bundle include Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery UI -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.14.1/jquery-ui.min.js"></script>

    <!-- DataTables Core -->
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.bootstrap5.min.js"></script>

    <!-- JSZip per Export Excel - DEVE essere caricato PRIMA di buttons.html5 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

    <!-- DataTables Buttons Plugin -->
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.print.min.js"></script>

    <!-- Vue-js -->
@*     <script src="~/lib/vue/vue.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.16/dist/vue.min.js"></script>

    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- Moment -->
    <script src="~/lib/moment/moment.js"></script>

    <!-- Input Helpers (ES6 Module) -->
    <script type="module" src="~/js/input-helpers.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
