@page
@model GiacenzaSorterRm.Pages.TipoPiattaforme.IndexModel

@{
    ViewData["Title"] = "Piattaforme";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">

            <h1>Piattaforme</h1>
            <br />
            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table table-striped table-bordered nowrap display compact table-sm" style="width:100%" tabindex="-1" id="tableProduzione">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Piattaforme[0].IdPiattaforma)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Piattaforme[0].Piattaforma)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Piattaforme)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdPiattaforma)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Piattaforma)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.IdPiattaforma">Edit</a> |
                                <a asp-page="./Delete" asp-route-id="@item.IdPiattaforma">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $('#tableProduzione').DataTable();
        });

    </script>
}