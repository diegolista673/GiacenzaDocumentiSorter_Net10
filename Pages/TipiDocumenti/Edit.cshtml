@page
@model GiacenzaSorterRm.Pages.TipiDocumenti.EditModel

@{
    ViewData["Title"] = "Edit Tipologia";
}

    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-8 col-md-8 col-lg-8">

                <h1>Modifica Tipologie Documenti</h1>
                <br />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Tipologie.IdTipologia" />
                    <div class="form-group">
                        <label asp-for="Tipologie.Tipologia" class="control-label"></label>
                        <input asp-for="Tipologie.Tipologia" class="form-control" />
                        <span asp-validation-for="Tipologie.Tipologia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tipologie.Note" class="control-label"></label>
                        <input asp-for="Tipologie.Note" class="form-control" />
                        <span asp-validation-for="Tipologie.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
