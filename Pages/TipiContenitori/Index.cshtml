@page
@model GiacenzaSorterRm.Pages.TipiContenitori.IndexModel

@{
    ViewData["Title"] = "Contenitori";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">

            <h1>Contenitori</h1>
            <br />
            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table table-striped table-bordered nowrap display compact table-sm" style="width:100%" tabindex="-1" id="tableProduzione" >
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Contenitori[0].Contenitore)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contenitori[0].DataCreazione)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contenitori[0].TotaleDocumenti)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contenitori[0].IdOperatoreCreazioneNavigation.Operatore)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Contenitori)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contenitore)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCreazione)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotaleDocumenti)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdOperatoreCreazioneNavigation.Operatore)
                            </td>

                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.IdContenitore">Edit</a> |
                                <a asp-page="./Delete" asp-route-id="@item.IdContenitore">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {
            $('#tableProduzione').DataTable();
        });

    </script>
}