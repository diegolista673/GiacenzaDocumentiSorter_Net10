@page
@model GiacenzaSorterRm.Pages.TipiContenitori.CreateModel

@{
    ViewData["Title"] = "Create Contenitore";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-6">

            <h4>Nuovo Contenitore</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label for="Contenitori_Contenitore" class="form-label">Contenitore</label>
                            <input asp-for="Contenitori.Contenitore" id="Contenitori_Contenitore" class="form-control" />
                            <span asp-validation-for="Contenitori.Contenitore" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Contenitori_TotaleDocumenti" class="form-label">Totale Documenti</label>
                            <input type="number" asp-for="Contenitori.TotaleDocumenti" id="Contenitori_TotaleDocumenti" class="form-control" value="0" min="0" oninput="this.value = Math.abs(this.value)" />
                            <span asp-validation-for="Contenitori.TotaleDocumenti" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="Index">Back to List</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
